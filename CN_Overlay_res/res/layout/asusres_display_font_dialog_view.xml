<?xml version="1.0" encoding="utf-8"?>
<!-- Copy from frameworks/base/core/res/res/layout/preference_material.xml
     and revise to meet ZenUI 3.0 style -->
<!-- Layout for a Preference in a PreferenceActivity. The
     Preference is able to place a specific widget for its particular
     type in the "widget_frame" layout. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <CheckedTextView android:tag="A" 
        android:id="@+id/checkedTextViewa" 
        android:layout_width="fill_parent" 
        android:layout_height="48dp" 
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:textSize="14sp"
        android:textColor="#505050"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/display_font_size_small" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cnasusres_preference_dividers"/>

    <CheckedTextView android:tag="B"
        android:id="@+id/checkedTextViewb"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textSize="18sp"
        android:textColor="#505050"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:text="@string/display_font_size_default" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cnasusres_preference_dividers"/>
    <CheckedTextView android:tag="C"
        android:id="@+id/checkedTextViewc"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textSize="22sp"
        android:textColor="#505050"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:text="@string/display_font_size_big" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cnasusres_preference_dividers"/>
    <CheckedTextView android:tag="D"
        android:id="@+id/checkedTextViewd"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#505050"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:text="@string/display_font_size_large" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
