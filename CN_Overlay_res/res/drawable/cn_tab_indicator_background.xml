<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <color android:color="@android:color/transparent" />
            </item>
          <item
                android:top="32dp"
                android:gravity="center_horizontal"
                android:width="12dp"
                android:height="4dp"
                android:drawable="@drawable/asusres_tab_point" />
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <color android:color="@android:color/transparent" />
            </item>
          <item
                android:top="32dp"
                android:gravity="center_horizontal"
                android:width="12dp"
                android:height="4dp"
                android:drawable="@drawable/asusres_tab_point" />
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <color android:color="@android:color/transparent" />
            </item>
          <item
                android:top="32dp"
                android:gravity="center_horizontal"
                android:width="12dp"
                android:height="4dp"
                android:drawable="@drawable/asusres_tab_point" />
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <color android:color="@android:color/transparent" />
            </item>
        </layer-list>
    </item>
</selector>



