<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_height"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/asus_ic_settings_fingerprint"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/list_start_margin"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/accessibility_virtual_key_group_icon_margin"
            android:id="@+id/imageView2" />

        <ImageView
            android:src="@drawable/asus_ic_settings_themeapp"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/accessibility_virtual_key_group_icon_margin"
            android:id="@+id/imageView3" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/list_start_margin"
            android:id="@+id/radioButton"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/list_start_margin"
        android:background="#d4d4d4"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
