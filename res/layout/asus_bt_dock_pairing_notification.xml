<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dip"
    android:orientation="vertical" >
    <TextView android:id="@+id/da01_bt_pairing_title"
        android:text="@string/title_remind_user_to_set_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView android:id="@+id/da01_bt_pairing_message"
            android:text="@string/notification_remind_user_to_set_bt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#6B6B6B"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/da01_bt_pairing_image"
            android:src="@drawable/da01_bt_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>