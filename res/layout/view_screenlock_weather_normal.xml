<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/SLockWeatherNormalLay"
        android:layout_marginEnd="@dimen/weather_normal_lay_margin_end"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SLockTimeThirdLay"
        >
        <ImageView
            android:id="@+id/SLockWeatherImg"
            android:layout_width="@dimen/weather_normal_icon_size"
            android:layout_height="@dimen/weather_normal_icon_size"
            android:scaleType="centerInside"
            android:src="@drawable/asus_weather2_small_cloudy"
            android:layout_above="@+id/SLockWeatherTx" />
        <TextView
            android:id="@+id/SLockWeatherTx"
            android:text="@string/NoGetWeather"
            android:textSize="@dimen/weather_normal_title_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#66000000"
            android:shadowRadius="1"
            android:shadowDx="2"
            android:shadowDy="1"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/SLockWeatherInfo"/>
        <TextView
            android:id="@+id/SLockWeatherInfo"
            android:text="@string/NoGetWeather"
            android:textSize="@dimen/weather_normal_info_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#66000000"
            android:shadowRadius="1"
            android:shadowDx="2"
            android:shadowDy="1"
            android:layout_centerHorizontal="true"

            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/SLockWeatherTime"
            android:text="@string/SLockWeatherTime_notsupport"
            android:textSize="@dimen/weather_normal_time_size"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#66000000"
            android:shadowRadius="1"
            android:shadowDx="2"
            android:shadowDy="1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SLockWeatherInfo"/>
    </RelativeLayout>
</merge>
