<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false">

    <TextView
        android:id="@+id/message"
        style="@style/TextAppearance.FingerprintMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/asus_suw_description_margin_top"
        android:text="@string/asus_security_settings_fingerprint_enroll_introduction_message_2"/>

    <View
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/asus_fingerprint_btn_bottom_margin"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/AsusFingerprintButton"
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="@dimen/asus_fingerprint_btn_w"
            android:gravity="center"
            android:text="@string/security_settings_fingerprint_enroll_introduction_cancel" />

        <Button
            style="@style/AsusFingerprintButton"
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="@dimen/asus_fingerprint_btn_w"
            android:layout_marginLeft="@dimen/asus_fingerprint_btn_margin"
            android:gravity="center"
            android:text="@string/security_settings_fingerprint_enroll_introduction_continue" />

    </LinearLayout>

</LinearLayout>
