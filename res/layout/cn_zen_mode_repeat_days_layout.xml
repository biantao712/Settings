<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cn_zen_mode_auto_schedule_day_title"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/cn_dialog_title_text_color"/>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="@color/cn_dialog_divider_line_color"
			android:layout_alignParentBottom="true"/>
    </RelativeLayout>

	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="14dip"
        android:paddingEnd="14dip">
        <CheckBox
			android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_monday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_tuesday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_wednesday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_thursday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_friday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_saturday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cn_dialog_list_line_color"/>
        <CheckBox
            android:id="@+id/sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dip"
            android:text="@string/cn_zen_mode_auto_schedule_day_sunday"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="15sp"
            android:textColor="@color/cn_dialog_list_text_color"
            style="@style/CNRepeatDaysCheckBoxStyle"/>
    </LinearLayout>
	</ScrollView>
</LinearLayout>
